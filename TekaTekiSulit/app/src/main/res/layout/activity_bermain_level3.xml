<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bermain_level3"
    android:background="@drawable/background"
    android:padding="15dp">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="STIKI Indonesia"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <ImageView
                android:id="@+id/nyawa1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/nyawa"/>
            <ImageView
                android:id="@+id/nyawa2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/nyawa"/>
            <ImageView
                android:id="@+id/nyawa3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/nyawa"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:fontFamily="casual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:text="Apa nama ibukota Indonesia ?"/>
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">
                <EditText
                    android:id="@+id/a"
                    android:inputType="textCapWords"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:maxLength="1"
                    android:fontFamily="casual"
                    android:layout_margin="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/teal_700"/>
                <EditText
                    android:id="@+id/b"
                    android:inputType="textCapWords"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:maxLength="1"
                    android:fontFamily="casual"
                    android:layout_margin="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/teal_700"/>
                <EditText
                    android:id="@+id/c"
                    android:inputType="textCapWords"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:maxLength="1"
                    android:fontFamily="casual"
                    android:layout_margin="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/teal_700"/>
                <EditText
                    android:id="@+id/d"
                    android:inputType="textCapWords"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:maxLength="1"
                    android:fontFamily="casual"
                    android:layout_margin="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/teal_700"/>
                <EditText
                    android:id="@+id/e"
                    android:inputType="textCapWords"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:maxLength="1"
                    android:fontFamily="casual"
                    android:layout_margin="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/teal_700"/>
                <EditText
                    android:id="@+id/f"
                    android:inputType="textCapWords"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:maxLength="1"
                    android:fontFamily="casual"
                    android:layout_margin="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/teal_700"/>
                <EditText
                    android:id="@+id/g"
                    android:inputType="textCapWords"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:maxLength="1"
                    android:fontFamily="casual"
                    android:layout_margin="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/teal_700"/>
            </LinearLayout>

            <Button
                android:id="@+id/cek"
                android:layout_marginTop="30dp"
                android:fontFamily="casual"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cek"/>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintsatu"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="900px"
        android:layout_height="900px"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="100px"
        android:background="@color/teal_700"
        android:padding="5dp"
        android:backgroundTint="@color/black">
        <RelativeLayout
            android:padding="40dp"
            android:background="@color/teal_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/constraintsatu"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/returnbenar"
                android:layout_centerHorizontal="true"
                android:layout_width="350px"
                android:layout_height="350px"
                android:src="@drawable/benar"/>
            <ImageView
                android:id="@+id/returnsalah"
                android:layout_centerHorizontal="true"
                android:layout_width="350px"
                android:layout_height="350px"
                android:src="@drawable/salah"/>
            <Button
                android:gravity="center"
                android:id="@+id/permain_barujuga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lanjutkan"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>